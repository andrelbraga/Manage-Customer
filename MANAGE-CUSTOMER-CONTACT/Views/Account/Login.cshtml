@using MANAGE_CUSTOMER_CONTACT.ViewModels
@model AccountViewModels


@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken();


    <div class="col-sm-8 col-md-8 col-md-offset-4" style="padding-top: 200px; align-content:center">


        @{
            if (TempData.Count() > 0)
            {
                <div class="text-danger" style="padding: 15px;">
                    @TempData["MsgError"].ToString()
                </div>
            }
        }


        @Html.ValidationSummary(true, "The email and/or password entered is invalid. Please try again.", new { @class = "text-danger" })
        <div class="form-group" style="display: inline">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        &nbsp;
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        &nbsp;
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Log in" class="btn btn-default" />
            </div>
        </div>
    </div>

}
